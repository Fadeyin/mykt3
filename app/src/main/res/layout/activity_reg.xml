<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/scroll"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
            android:background="@color/blue">
    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            tools:context=".screens.RegActivity"
            android:layout_height="600dp">
        <Spinner
                android:id="@+id/spinner2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:elevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textPosition2"
                android:layout_marginTop="8dp"
        >
        </Spinner>
        <TextView
                android:id="@+id/textPosition2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Место работы"
                android:textColor="@color/white_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.01"
                app:layout_constraintStart_toStartOf="@+id/position"
                android:textAlignment="viewStart" android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/patronymic"/>
        <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/textSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Вход"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appName"/>

        <TextView
                android:id="@+id/textEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textColor="@color/white_grey"
                android:textAlignment="textStart"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="@+id/emailReg"
                app:layout_constraintTop_toBottomOf="@+id/textSignIn"
                app:layout_constraintHorizontal_bias="0.01"

                tools:ignore="MissingConstraints" android:layout_marginTop="24dp" android:textSize="18sp"
        />

        <EditText
                android:id="@+id/emailReg"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="@color/white_grey"
                android:elevation="6dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" app:layout_constraintTop_toBottomOf="@+id/textEmail"/>
        <TextView
                android:id="@+id/textPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textColor="@color/white_grey"
                android:layout_marginTop="8dp"
                android:textAlignment="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.01"
                app:layout_constraintStart_toStartOf="@+id/passwordReg"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/emailReg"/>

        <EditText
                android:id="@+id/passwordReg"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="@color/white_grey"
                android:elevation="6dp"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" app:layout_constraintTop_toBottomOf="@+id/textPassword"/>

        <TextView
                android:id="@+id/textFirst_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/name"
                android:textColor="@color/white_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.01"
                app:layout_constraintStart_toStartOf="@+id/first_name"
                android:textAlignment="textStart" android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/passwordReg"/>

        <EditText
                android:id="@+id/first_name"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="@color/white_grey"
                android:elevation="6dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" app:layout_constraintTop_toBottomOf="@+id/textFirst_name"/>

        <TextView
                android:id="@+id/textLast_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Last_name"
                android:textColor="@color/white_grey"
                android:textAlignment="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.01"
                app:layout_constraintStart_toStartOf="@+id/last_name"
                android:textSize="18sp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/first_name"/>

        <EditText
                android:id="@+id/last_name"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@color/white_grey"
                android:elevation="6dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" app:layout_constraintTop_toBottomOf="@+id/textLast_name"
                android:layout_marginTop="8dp"/>

        <TextView
                android:id="@+id/textPatronymic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Patronymic"
                android:textColor="@color/white_grey"
                android:layout_marginTop="8dp"
                android:textAlignment="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.01"
                app:layout_constraintStart_toStartOf="@+id/patronymic"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/last_name"/>

        <EditText
                android:id="@+id/patronymic"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="@color/white_grey"
                android:elevation="6dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" app:layout_constraintTop_toBottomOf="@+id/textPatronymic"/>

        <TextView
                android:id="@+id/textPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/position"
                android:textColor="@color/white_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.01"
                app:layout_constraintStart_toStartOf="@+id/position"
                android:textAlignment="viewStart" android:textSize="18sp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinner2"/>

        <EditText
                android:id="@+id/position"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@color/white_grey"
                android:elevation="6dp"
                android:ems="10"
                android:inputType="text"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" app:layout_constraintTop_toBottomOf="@+id/textPosition"
                android:layout_marginTop="12dp"/>


        <TextView
                android:id="@+id/textPhone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Номер телефона (в форме 89123456789)"
                android:textColor="@color/white_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.01"
                app:layout_constraintStart_toStartOf="@+id/phone_number"
                android:textAlignment="viewStart" android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/position"/>

        <EditText
                android:id="@+id/phone_number"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="@color/white_grey"
                android:elevation="6dp"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" app:layout_constraintTop_toBottomOf="@+id/textPhone_number"/>

        <Button
                android:id="@+id/btnReg"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:elevation="4dp"
                android:text="@string/registration"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/regInfo"

                android:background="@color/yellow" android:layout_marginStart="70dp" android:layout_marginEnd="70dp"
                android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:id="@+id/regInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Важная информация: После успешной регистрации, чтобы войти в систему, необходимо дождаться подтверждения аккаунта"
                android:textColor="@color/white_grey"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.01"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@+id/phone_number" android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>