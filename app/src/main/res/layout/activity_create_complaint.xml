<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.fadeyin.mykt3.screens.request.CreateComplaint">
        <include layout="@layout/toolbar_navigation" android:id="@+id/include2"/>
        <TextView
                android:text="Заголовок:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/title_complaints"
                android:layout_marginStart="8dp"
                android:layout_marginTop="70dp" app:layout_constraintTop_toTopOf="parent"/>
        <EditText
                android:id="@+id/title_complaints"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@color/white"
                android:elevation="6dp"
                android:ems="10"
                android:inputType="text"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"/>

        <TextView
                android:text="Описание жалобы"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                app:layout_constraintStart_toStartOf="@+id/description_complaints"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/title_complaints"/>
        <EditText
                android:id="@+id/description_complaints"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@color/white"
                android:elevation="6dp"
                android:ems="10"

                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView4"
                android:textSize="18sp"
                android:inputType="text" android:selectAllOnFocus="true" android:singleLine="false"/>
        <Button
                android:text="Создать"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/create_button" android:background="@color/blue"
                android:layout_marginTop="76dp" app:layout_constraintTop_toBottomOf="@+id/description_complaints"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp"
                app:layout_constraintHorizontal_bias="1.0"/>
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar3" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/create_button" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/description_complaints"
                app:layout_constraintStart_toStartOf="@+id/create_button"
                app:layout_constraintEnd_toEndOf="@+id/create_button" android:layout_width="wrap_content"
                android:visibility="invisible"/>

</android.support.constraint.ConstraintLayout>
