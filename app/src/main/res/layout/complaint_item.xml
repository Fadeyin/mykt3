<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <android.support.v7.widget.CardView
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white_grey">
        <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/title"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#040404"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"/>
            <TextView
                    android:id="@+id/description"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#040404"
                    android:textSize="15sp"
                    android:typeface="sans"/>

            <TextView
                    android:text="@string/now_status"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#040404"
                    android:id="@+id/textView"/>
            <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/now_status"/>
            <TextView
                    android:id="@+id/array_status"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:typeface="sans"
                    android:layout_width="wrap_content"/>
        </LinearLayout>
        <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/update_btn"
                android:background="@drawable/ic_delete_forever_black_24dp"
                android:visibility="invisible"
                android:layout_gravity="end|bottom"
                app:elevation="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:onClick="deleteComplaint"/>
    </android.support.v7.widget.CardView>
</LinearLayout>