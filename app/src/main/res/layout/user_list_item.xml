<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <android.support.v7.widget.CardView
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white_grey">
        <LinearLayout
                android:padding="0dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/title"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#040404"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"/>
            <TextView
                    android:text="Организация:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"/>
            <TextView
                    android:id="@+id/organization"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#040404"
                    android:textSize="15sp"
                    android:typeface="sans"/>
            <TextView
                    android:text="Должность:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView6"/>
            <TextView
                    android:id="@+id/work"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#040404"
                    android:textSize="15sp"
                    android:typeface="sans"/>
            <TextView
                    android:text="Контакты:"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:id="@+id/textView"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="22dp"
                        app:srcCompat="@android:drawable/ic_menu_call"
                        android:id="@+id/imageView2" android:layout_weight="1" android:layout_height="22dp"/>
                <TextView
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/now_status"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="22dp"
                        app:srcCompat="@android:drawable/ic_menu_send"
                        android:id="@+id/imageView3" android:layout_weight="1" android:layout_height="22dp"/>
                <TextView
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/resident_email"/>
            </LinearLayout>
<!--
            <Button
                    android:text="Сотрудники"
                    android:id="@+id/button"
                    android:layout_gravity="end|bottom"
                    android:background="@color/white_grey" android:textColor="@color/main"
                    android:visibility="invisible"/>-->
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>