        <activity android:name=".screens.request.ComplaintsActivity">
        </activity>
        <activity android:name=".screens.request.BookingActivity">
        </activity>
        <activity android:name=".MainActivity">
        </activity>
        <activity android:name=".screens.request.CreateComplaint">
        </activity>
        <activity android:name=".screens.request.UpdateComplaintActivity">
        </activity>
        <activity android:name=".screens.request.CreateBooking">
        </activity>
        <activity android:name=".screens.resident.UserListActivity">
        </activity>
        <activity android:name=".screens.menu.ProfileActivity">
        </activity>

        <uses-library
                android:name="org.apache.http.legacy"
                android:required="false"/>
    </application>

</manifest>